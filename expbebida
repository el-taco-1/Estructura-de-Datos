package alcoholismo;

/**
 *
 * @author locop
 */
class ListaNodo {

    nodo inicio;
    nodo punta;
    nodo alchol;
    nodo sirro;
    nodo hepa;
    nodo sida;

    public void Agrega(String Nombre) {
        nodo temp = new nodo();
        temp.flaca = Nombre;
        if (inicio == null) {
            inicio = temp;
            inicio.sig = null;
            punta = inicio;
        } else {
            punta.sig = temp;
            temp.sig = null;
            punta = temp;
        }
    }

    public void Elbicho(String marca) {
        nodo temp = new nodo();
        temp.Marcas = marca;
        if (alchol == null) {
            alchol = temp;
            alchol.Ing = null;
            sirro = alchol;
        } else {
            sirro.Ing = temp;
            temp.Ing = null;
            sirro = temp;
        }
    }

    public void siu(String Id) {
        nodo temp = new nodo();
        temp.Id = Id;
        if (hepa == null) {
            hepa = temp;
            hepa.vaa = null;
            sida = hepa;
        } else {
            sida.vaa = temp;
            temp.vaa = null;
            sida = temp;
        }
    }

    public void Lista() {
        nodo ac = new nodo();
        ac = inicio;
        nodo Yes = new nodo();
        Yes = alchol;
        nodo pp = new nodo();
        pp = hepa;
        int cont = 0;
        while (ac != null) {
            cont++;
            System.out.println(" " + "[" + cont + "]" + " " + "[" + ac.flaca + "]" + " " + "[" + Yes.Marcas + "]" + " " + "[" + pp.Id + "]" + "  ");
            ac = (nodo) ac.sig;
            Yes = (nodo) Yes.Ing;
            pp = (nodo) pp.vaa;
            
        }
    }
}



